---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/MarkdownContent.astro';
import ProjectInfo from "./ProjectInfo.astro";

// Anything under projects/
const isProject = Astro.props.slug.startsWith('projects/');
---

{
  isProject ? (
    <ProjectInfo {...Astro.props as any} />
    <Default {...Astro.props}>
      <slot />
    </Default>
  ) : (
    <Default {...Astro.props}>
      <slot />
    </Default>
  )
}
